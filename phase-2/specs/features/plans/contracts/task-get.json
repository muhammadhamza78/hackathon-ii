{
  "endpoint": "GET /api/tasks/{task_id}",
  "description": "Get a single task by ID (only if owned by authenticated user)",
  "authentication": "Required (JWT)",
  "request": {
    "headers": {
      "Authorization": "Bearer <JWT_TOKEN>"
    },
    "path_parameters": {
      "task_id": {
        "type": "integer",
        "required": true,
        "description": "Task ID"
      }
    },
    "example": "GET /api/tasks/123"
  },
  "responses": {
    "200": {
      "description": "Task retrieved successfully",
      "body": {
        "id": {"type": "integer"},
        "title": {"type": "string"},
        "description": {"type": "string | null"},
        "status": {"type": "enum", "values": ["pending", "in_progress", "completed"]},
        "user_id": {"type": "integer"},
        "created_at": {"type": "string", "format": "ISO 8601"},
        "updated_at": {"type": "string", "format": "ISO 8601"}
      },
      "example": {
        "id": 123,
        "title": "Buy groceries",
        "description": "Milk, eggs, bread",
        "status": "pending",
        "user_id": 456,
        "created_at": "2025-12-30T10:00:00Z",
        "updated_at": "2025-12-30T10:00:00Z"
      }
    },
    "401": {
      "description": "Unauthorized - Missing or invalid JWT token",
      "body": {"detail": "Unauthorized"},
      "example": {"detail": "Unauthorized"}
    },
    "404": {
      "description": "Task not found OR task exists but belongs to different user",
      "body": {"detail": "Task not found"},
      "example": {"detail": "Task not found"},
      "note": "Returns 404 (not 403) to prevent user enumeration"
    }
  },
  "business_logic": [
    "Extract user_id from JWT token",
    "Query database for task WHERE id = task_id AND user_id = authenticated_user_id",
    "If found, return task with 200",
    "If not found, return 404 (same response whether task doesn't exist or belongs to other user)"
  ],
  "user_isolation": "Returns 404 if task belongs to different user (prevents information leakage)",
  "security": "404 prevents user enumeration attacks (doesn't reveal if task ID exists)"
}
