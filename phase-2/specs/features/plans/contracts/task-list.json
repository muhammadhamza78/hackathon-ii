{
  "endpoint": "GET /api/tasks",
  "description": "List all tasks for the authenticated user",
  "authentication": "Required (JWT)",
  "request": {
    "headers": {
      "Authorization": "Bearer <JWT_TOKEN>"
    },
    "query_parameters": "None (filtering/pagination out of scope for MVP)",
    "body": "None"
  },
  "responses": {
    "200": {
      "description": "Tasks retrieved successfully",
      "body": {
        "tasks": {
          "type": "array",
          "items": {
            "id": {"type": "integer"},
            "title": {"type": "string"},
            "description": {"type": "string | null"},
            "status": {"type": "enum", "values": ["pending", "in_progress", "completed"]},
            "user_id": {"type": "integer"},
            "created_at": {"type": "string", "format": "ISO 8601"},
            "updated_at": {"type": "string", "format": "ISO 8601"}
          }
        }
      },
      "example": {
        "tasks": [
          {
            "id": 123,
            "title": "Buy groceries",
            "description": "Milk, eggs, bread",
            "status": "pending",
            "user_id": 456,
            "created_at": "2025-12-30T10:00:00Z",
            "updated_at": "2025-12-30T10:00:00Z"
          },
          {
            "id": 124,
            "title": "Write report",
            "description": null,
            "status": "in_progress",
            "user_id": 456,
            "created_at": "2025-12-30T11:00:00Z",
            "updated_at": "2025-12-30T11:30:00Z"
          }
        ]
      }
    },
    "401": {
      "description": "Unauthorized - Missing or invalid JWT token",
      "body": {"detail": "Unauthorized"},
      "example": {"detail": "Unauthorized"}
    }
  },
  "business_logic": [
    "Extract user_id from JWT token",
    "Query database for tasks WHERE user_id = authenticated_user_id",
    "Order by created_at DESC (newest first)",
    "Return array of tasks",
    "Return empty array if user has no tasks"
  ],
  "user_isolation": "Only returns tasks owned by authenticated user (filtered by user_id from JWT)",
  "performance": "Uses composite index (user_id, created_at DESC) for fast queries"
}
